.to-flips {
  .content {
    height: 150px;
    position: relative;
    overflow: hidden;

    .grey {
      color: #999;
    }

    .block {
      width: 100%;
      position: absolute;
      top: 0px;
      display: block;
      overflow: hidden;
    }
  }

  .flipnav {
    margin: 0 0 0 70px;

    .btn-left, .btn-right, .btn-left-dis {
      width: 20px;
      height: 20px;
      background: #ccc;
      color: #fff;
      float: left;
      font-size: 16px;
      text-align: center;
      cursor: pointer;
    }
  }
}

.btn-right-dis {
  width: 20px;
  height: 20px;
  background: #ccc;
  color: #fff;
  float: left;
  font-size: 16px;
  text-align: center;
  cursor: pointer;
}

.to-flips .flipnav {
  .btn-left-dis, .btn-right-dis {
    color: #fff;
    background: #fff;
    cursor: default;
  }
}
